<div class="container app-container">
  <%= flash_messages %>

  <h1>Listing Ticket Types</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Max quantity</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @ticket_types.each do |ticket_type| %>
        <tr>
          <td><%= ticket_type.name %></td>
          <td><%= ticket_type.price %></td>
          <td><%= ticket_type.max_quantity %></td>
          <td><%= link_to 'Show', event_ticket_type_path(@event, ticket_type) %></td>
          <td><%= link_to 'Edit', edit_event_ticket_type_path(@event, ticket_type) %></td>
          <td><%= link_to 'Delete', event_ticket_type_path(@event, ticket_type), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Ticket type', new_event_ticket_type_path %>
</div>