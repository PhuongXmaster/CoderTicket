<div class="container tickets-buy app-container">
  <h2> <%= @event.name %> </h2>
  <%= flash_messages %>

  <%= simple_form_for(@ticket, url: new_event_ticket_path, html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :ticket_type, as: :radio_buttons, collection: @event.ticket_types.collect { |type| ["#{type.name} - #{number_to_currency(type.price, unit: 'VND', precision: 0)}. Max quantity: #{type.max_quantity}", type.id] }, required: true %>
      <%= f.input :quantity %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Book ticket" %>
    </div>
  <% end %>
</div>  

